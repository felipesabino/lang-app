{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@aws-sdk",
      "./node_modules/@nova-odm"
    ],
  },
  "exclude": [
    "node_modules",
    "cdk.out",
    "node_modules/@aws-sdk/**/*"
  ],
  "include": [
    "bin/**/*.ts",
    "lib/**/*.ts",
    "resources/**/*.ts"
  ]
}
